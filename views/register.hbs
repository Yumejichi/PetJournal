{{! views/register.hbs }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/styles/register.css">
</head>
<body>
    <div id="register-container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr />

        {{#if errorMessage}}
            <p style="color:red;">{{errorMessage}}</p>
        {{/if}}
        
        <form action="/register" method="post">
            <label for="username"><b>Username</b></label><br />
            <input type="text" id="username" name="username" placeholder="Enter Username" value="{{username}}" required>
            <br /><br />
            <label for="email"><b>Email</b></label><br />
            <input type="email" id="email" name="email" placeholder="Enter Email" value="{{email}}" required>
            <br /><br />
            <label for="password"><b>Password</b></label><br />
            <input type="password" id="password" name="password" placeholder="Enter Password" required>
            <br /><br />
            <label for="psw_repeat"><b>Repeat Password</b></label><br />
            <input type="password" name="psw_repeat" id="psw_repeat" placeholder="Repeat Password" required>
            <br /><br />
            <hr />
            <button type="submit" id="register">Register</button>
        </form>
        <p>Already have an account? <a href="/login">Log in</a></p>
    </div>
</body>
</html>
